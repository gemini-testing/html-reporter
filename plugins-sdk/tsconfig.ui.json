{
    "extends": "../tsconfig.common.json",
    "include": [
        "../lib/static/modules/plugins-sdk-ui.ts",
        "../lib/static/new-ui/types/typings.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": "../lib",
        "outDir": "./build-ui",
        "declaration": true,
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "paths": {
            "@/*": ["./*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ]
    }
}