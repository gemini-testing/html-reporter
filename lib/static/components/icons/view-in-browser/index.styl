.view-in-browser {
    height: 16px;
    margin-left: 4px;
    color: black;
    opacity: 0.6;

    &:visited {
        color: black;
    }

    &:active,
    &:hover {
        &.view-in-browser_active {
            opacity: 1;
            cursor: pointer;
        }

        &.view-in-browser_disabled {
            cursor: default;
        }
    }
}
